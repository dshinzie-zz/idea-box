<div class="container-fluid collapse-form">
  <%= form_for [user, idea], html: {multipart: true} do |f| %>
    <%= f.text_field :name, placeholder: "Title"%><br/><br/>
    <%= f.text_area :description, placeholder: "Description"%>
    <ul class="form-list" align="left">
      <li><%= f.label :category %></li>
      <li><%= f.collection_select :category_id, Category.all,:id,:name, include_blank: true %></li><br/>
      <li><%= f.label :images %></li>
      <li class="image-list"><%= f.collection_select :image_ids, Image.all, :id, :title, { :include_blank => true }  , { :multiple => true }%></li><br/>
      <li class="submit"><%= f.submit %></li>
    </ul>
  <% end %>
